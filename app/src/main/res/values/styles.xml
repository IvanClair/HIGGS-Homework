<resources>

    <!-- region Base Application Theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--  Primary  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!--  Secondary  -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!--  Background  -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!--  Surface  -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!--  Error  -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!--  Status Bar  -->
        <item name="android:colorPrimaryDark">?attr/colorPrimaryVariant</item>

        <!--  Navigation Bar  -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!--  endregion  -->

    <!--  region CardView  -->
    <style name="MyCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <!--  endregion  -->

    <!--  region ImageView  -->
    <style name="MyImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyImageView.Avatar" parent="MyImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <!--  endregion  -->

    <!--  region TextView  -->
    <style name="MyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="MyTextView.UserName" parent="MyTextView">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTextView.Label" parent="MyTextView">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>

    <style name="MyTextView.Value" parent="MyTextView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>
    <!--  endregion  -->
</resources>
